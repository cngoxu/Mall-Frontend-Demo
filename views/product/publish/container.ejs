<div class="container">
    <!-- 标题 -->
    <div class="section">
        <h3>发布新商品</h3>
        <div class="divider"></div>
    </div>

    <!-- 表单 -->
    <div class="section">
        <form id="product-form">
            <!-- 商品名称 -->
            <div class="row">
                <div class="input-field col s12">
                    <input id="product-name" name="title" type="text" class="validate" required>
                    <label for="product-name">商品名称</label>
                    <span class="helper-text">请输入商品名称</span>
                </div>
            </div>

            <!-- 商品价格 -->
            <div class="row">
                <div class="input-field col s12 m6">
                    <input id="product-price" name="price" type="number" step="0.01" min="0" class="validate" required>
                    <label for="product-price">价格 (¥)</label>
                    <span class="helper-text">请输入商品价格</span>
                </div>
                <div class="input-field col s12 m6">
                    <input id="product-stock" name="stock" type="number" min="0" class="validate" required>
                    <label for="product-stock">库存数量</label>
                    <span class="helper-text">请输入库存数量</span>
                </div>
            </div>

            <!-- 商品图片 -->
            <div class="row">
                <div class="col s12">
                    <h5>商品图片</h5>
                    <div class="divider"></div>

                    <!-- 图片链接方式 -->
                    <div class="input-field">
                        <input id="image-url" type="url" name="images" class="validate" required>
                        <label for="image-url">图片URL</label>
                        <a id="load-image-url" class="btn waves-effect waves-light teal lighten-2">
                            <i class="material-icons left">cloud_download</i>加载图片
                        </a>
                        <span class="helper-text">请输入商品主图的完整URL地址</span>
                    </div>

                    <!-- 主图预览 -->
                    <div class="image-preview-container" id="main-image-preview">
                        <p class="grey-text">暂无主图</p>
                    </div>

                    <!-- 多图上传保留但禁用 -->
                    <div class="file-field input-field" style="display:none;">
                        <div class="btn teal lighten-2 disabled">
                            <span>选择其他图片</span>
                            <input type="file" id="other-images" name="otherImages" multiple accept="image/*" disabled>
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text" placeholder="此功能暂不可用">
                        </div>
                    </div>
                </div>
            </div>

            <!-- 商品描述 -->
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="product-description" name="description" class="materialize-textarea" required></textarea>
                    <label for="product-description">商品描述</label>
                    <span class="helper-text">请输入商品详细描述</span>
                </div>
            </div>

            <!-- 商品状态 -->
            <div class="row">
                <div class="input-field col s12">
                    <div class="switch">
                        <label>
                            下架
                            <input type="checkbox" name="status" checked>
                            <span class="lever"></span>
                            上架
                        </label>
                    </div>
                    <span class="helper-text">设置商品上架状态</span>
                </div>
            </div>

            <!-- 提交按钮 -->
            <div class="row">
                <div class="col s12 right-align">
                    <a href="/my-products" class="btn waves-effect waves-light grey">取消</a>
                    <button id="publish-btn" type="submit" class="btn waves-effect waves-light teal">
                        发布商品
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>