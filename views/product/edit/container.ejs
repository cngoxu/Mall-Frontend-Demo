<div class="container">
    <!-- 标题 -->
    <div class="section">
        <h3>编辑商品信息</h3>
        <div class="divider"></div>
    </div>

    <!-- 表单 -->
    <div class="section">
        <form id="product-form">
            <input type="hidden" id="product-id" name="id">
            
            <!-- 商品基本信息 -->
            <div class="row">
                <div class="input-field col s12">
                    <input id="product-name" name="name" type="text" class="validate" required readonly>
                    <label for="product-name">商品名称</label>
                    <span class="helper-text">必填字段</span>
                </div>
            </div>

            <!-- 商品价格 -->
            <div class="row">
                <div class="input-field col s12">
                    <input id="product-price" name="price" type="number" step="0.01" min="0" class="validate" required readonly>
                    <label for="product-price">价格 (¥)</label>
                    <span class="helper-text">商品销售价格</span>
                </div>
            </div>

            <!-- 商品信息展示 -->
            <div class="row product-info-display">
                <div class="col s12 m4">
                    <div class="info-item">
                        <span class="info-label">商品销量：</span>
                        <span id="product-sales" class="info-value">0</span>
                    </div>
                </div>
                <div class="col s12 m4">
                    <div class="info-item">
                        <span class="info-label">创建时间：</span>
                        <span id="product-created" class="info-value">-</span>
                    </div>
                </div>
                <div class="col s12 m4">
                    <div class="info-item">
                        <span class="info-label">库存更新时间：</span>
                        <span id="stock-updated" class="info-value">-</span>
                    </div>
                </div>
            </div>

            <!-- 商品库存 -->
            <div class="row stock-section">
                <div class="col s12">
                    <h5>库存管理</h5>
                    <div class="divider"></div>
                    
                    <div class="input-field col s12 m6">
                        <div class="stock-control">
                            <label>当前库存</label>
                            <div class="stock-value">
                                <span id="current-stock">0</span>
                                <div class="stock-actions">
                                    <a class="btn-flat stock-btn minus-btn disabled"><i class="material-icons">remove</i></a>
                                    <input type="number" id="stock-change" value="0" min="0" class="stock-input" disabled>
                                    <a class="btn-flat stock-btn plus-btn disabled"><i class="material-icons">add</i></a>
                                </div>
                            </div>
                        </div>
                        <div class="stock-update-actions">
                            <a id="update-stock-btn" class="btn waves-effect waves-light teal lighten-2 disabled">更新库存</a>
                            <span class="stock-hint">输入新的库存数量后点击更新</span>
                        </div>
                    </div>
                    <input type="hidden" id="product-stock" name="stock">
                </div>
            </div>

            <!-- 商品图片 -->
            <div class="row">
                <div class="col s12">
                    <h5>商品图片</h5>
                    <div class="divider"></div>

                    <!-- 图片链接方式 -->
                    <div class="input-field">
                        <input id="image-url" type="url" class="validate" disabled>
                        <label for="image-url">主图URL</label>
                        <a id="load-image-url" class="btn waves-effect waves-light teal lighten-2 disabled">
                            <i class="material-icons left">cloud_download</i>加载图片
                        </a>
                        <span class="helper-text">请提供商品主图的完整URL地址</span>
                    </div>
                    <input type="hidden" id="main-image-url" name="mainImageUrl">

                    <!-- 主图预览 -->
                    <div class="image-preview-container" id="main-image-preview">
                        <p class="grey-text">暂无主图</p>
                    </div>

                    <!-- 多图上传保留但禁用 -->
                    <div class="file-field input-field" style="display:none;">
                        <div class="btn teal lighten-2 disabled">
                            <span>选择其他图片</span>
                            <input type="file" id="other-images" name="otherImages" multiple accept="image/*" disabled>
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text" placeholder="此功能暂不可用">
                        </div>
                    </div>
                </div>
            </div>

            <!-- 商品描述 -->
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="product-description" name="description" class="materialize-textarea" required readonly></textarea>
                    <label for="product-description">商品描述</label>
                    <span class="helper-text">商品的详细描述信息</span>
                </div>
            </div>

            <!-- 商品状态 -->
            <div class="row">
                <div class="input-field col s12">
                    <div class="switch">
                        <label>
                            下架
                            <input type="checkbox" name="status" disabled>
                            <span class="lever"></span>
                            上架
                        </label>
                    </div>
                    <span class="helper-text">商品销售状态</span>
                </div>
            </div>

            <!-- 提交按钮 -->
            <div class="row">
                <div class="col s12 right-align">
                    <a href="/my-products" class="btn waves-effect waves-light grey">返回</a>
                    <button id="save-btn" type="button" class="btn waves-effect waves-light teal disabled">
                        保存
                    </button>
                    <button id="edit-btn" type="button" class="btn waves-effect waves-light teal">编辑</button>
                </div>
            </div>
        </form>
    </div>
</div>