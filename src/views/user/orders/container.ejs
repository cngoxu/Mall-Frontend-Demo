<div class="container">
    <!-- 标题 -->
    <div class="section">
        <h3>我的订单</h3>
        <div class="divider"></div>
    </div>

    <!-- 订单列表 -->
    <div class="section" id="orders-container">
        <div class="row" id="orders-list">
            <!-- 加载动画 -->
            <div class="col s12 center-align" style="padding: 40px 0;">
                <div class="preloader-wrapper big active">
                    <div class="spinner-layer spinner-teal-only">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div>
                        <div class="gap-patch">
                            <div class="circle"></div>
                        </div>
                        <div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                </div>
                <p>正在加载订单...</p>
            </div>
        </div>
    </div>

    <!-- 分页 -->
    <div class="section center-align" id="pagination-container">
        <!-- 分页将通过JS动态生成 -->
    </div>
</div>