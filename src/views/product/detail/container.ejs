<div class="container">
    <!-- 骨架屏容器 -->
    <div id="skeleton-screen">
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-image">
                        <div class="skeleton-image" style="height: auto;"></div>
                    </div>
                    <div class="card-content">
                        <div class="row" id="product-thumbnails">
                            <% for(let i=0; i<4; i++) { %>
                                <div class="col s3">
                                    <div class="skeleton-image" style="height: 80px;"></div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        <div class="skeleton-text" style="width: 80%; height: 32px; margin-bottom: 20px;"></div>
                        <div class="divider"></div>

                        <div class="section">
                            <div class="skeleton-text" style="width: 30%; height: 28px; margin-bottom: 15px;"></div>
                            <div class="skeleton-text" style="width: 40%; height: 20px; margin-bottom: 10px;"></div>
                            <div class="skeleton-text" style="width: 40%; height: 20px;"></div>
                        </div>

                        <div class="divider"></div>

                        <div class="section">
                            <div class="row valign-wrapper">
                                <div class="col s4">
                                    <h5>数量</h5>
                                </div>
                                <div class="col s8">
                                    <div class="skeleton-text" style="width: 100px; height: 36px;"></div>
                                </div>
                            </div>
                        </div>

                        <div class="section">
                            <div class="skeleton-text" style="width: 120px; height: 42px; display: inline-block; margin-right: 10px;"></div>
                            <div class="skeleton-text" style="width: 120px; height: 42px; display: inline-block;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        <div class="skeleton-text" style="width: 200px; height: 48px;"></div>
                    </div>

                    <div class="card-content">
                        <div class="skeleton-container">
                            <% for(let i=0; i<5; i++) { %>
                                <div class="skeleton-text" style="width: 100%; margin-bottom: 10px;"></div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 实际内容容器 (初始隐藏) -->
    <div id="product-content" style="display: none;">
        <div class="row">
            <div class="col s12">
                <div class="card product-image-card">
                    <div class="card-image">
                        <img id="product-main-image" src="" class="responsive-img materialboxed">
                        <span id="product-status-badge" class="badge new" data-badge-caption=""></span>
                    </div>
                    <div class="card-content">
                        <div class="row" id="product-thumbnails">
                            <!-- 缩略图将通过JS动态生成 -->
                        </div>
                    </div>
                </div>
            </div>

            <div class="col s12">
                <div class="card product-info-card">
                    <div class="card-content">
                        <h4 id="product-name" class="product-title"></h4>
                        <div class="divider"></div>

                        <div class="section product-meta">
                            <div class="price-container">
                                <h5 class="red-text" id="product-price"></h5>
                                <h6 class="grey-text text-darken-1 original-price" id="product-original-price"></h6>
                            </div>
                            <div class="product-stats">
                                <div class="stat-item">
                                    <i class="material-icons tiny">shopping_cart</i>
                                    <span id="product-sales">销量: 0</span>
                                </div>
                                <div class="stat-item">
                                    <i class="material-icons tiny">store</i>
                                    <span id="product-stock-status">库存状态: 加载中...</span>
                                </div>
                                <div class="stat-item">
                                    <i class="material-icons tiny">access_time</i>
                                    <span id="product-update-time">更新时间: -</span>
                                </div>
                            </div>
                            <div id="product-promotion" class="promotion-banner"></div>
                        </div>

                        <div class="divider"></div>

                        <div class="section quantity-section">
                            <div class="row valign-wrapper">
                                <div class="col s4">
                                    <h5>购买数量</h5>
                                </div>
                                <div class="col s8">
                                    <div class="quantity-control">
                                        <button class="btn-flat quantity-btn" id="quantity-decrease">
                                            <i class="material-icons">remove</i>
                                        </button>
                                        <input type="number" id="product-quantity" value="1" min="1" max="99" class="validate">
                                        <button class="btn-flat quantity-btn" id="quantity-increase">
                                            <i class="material-icons">add</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <p class="total-price">总价: <span id="total-price">¥0.00</span></p>
                                </div>
                            </div>
                        </div>

                        <div class="divider"></div>

                        <div class="section action-buttons">
                            <button class="btn waves-effect waves-light red darken-1" id="buy-now-btn">
                                <i class="material-icons left">flash_on</i>立即下单
                            </button>
                            <button class="btn waves-effect waves-light blue darken-1" id="add-to-cart-btn">
                                <i class="material-icons left">add_shopping_cart</i>加入购物车
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col s12">
                <div class="card product-detail-card">
                    <div class="card-content">
                        <ul class="tabs">
                            <li class="tab col s3"><a class="active" href="#product-details">商品详情</a></li>
                            <li class="tab col s3"><a href="#product-reviews">用户评价(<span id="review-count">0</span>)</a></li>
                        </ul>
                    </div>

                    <div id="product-details" class="card-content">
                        <div id="product-description"></div>
                    </div>

                    <div id="product-reviews" class="card-content">
                        <div id="reviews-container">
                            <!-- 评价将通过JS动态生成 -->
                        </div>
                        <div class="center-align">
                            <a href="#" class="waves-effect waves-light btn" id="view-all-reviews">查看全部评价</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>